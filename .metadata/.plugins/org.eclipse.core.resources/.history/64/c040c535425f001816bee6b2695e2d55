package zad1;


import java.math.BigDecimal;
import java.util.HashMap;
import java.util.function.*;

public class Calc {
	
    public HashMap<String,  BigDecimal> commands = new HashMap<String, BigDecimal>();
    String [] args = null;
    {
    	commands.put("+", (new BigDecimal(args[0])).add(new BigDecimal(args[2])));
    	commands.put("-", adding(new BigDecimal(args[0]), new BigDecimal(args[2])));
    	commands.put("*", adding(new BigDecimal(args[0]), new BigDecimal(args[2])));
    	commands.put("/", adding(new BigDecimal(args[0]), new BigDecimal(args[2])));
    }
    public BigDecimal adding(BigDecimal x, BigDecimal y){
    	return x.add(y);
    }
 
    
    
	public String doCalc(String calc){
		try {
			args = calc.split("\\s+");
			return commands.get(args[1]).toString();
		} catch (Exception e) {
			return "Invalid command to calc";			
		}
	}	
  
}


	
	
